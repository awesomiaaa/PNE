<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/duo_view_header_text_sub"
        android:layout_width="109dp"
        android:layout_height="104dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="22dp"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="55dp"
        android:src="@drawable/bird" />

    <TextView
        android:id="@+id/duo_view_header_text_sub_title"
        android:layout_width="134dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/duo_view_header_text_sub"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="151dp"
        android:layout_marginLeft="151dp"
        android:layout_marginTop="-26dp"
        android:text="Manager"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/white"
        android:textStyle="italic" />

    <View
        android:id="@+id/duo_view_header_border"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_below="@+id/duo_view_header_text_sub_title"
        android:layout_marginTop="32dp"
        android:background="@android:color/white"/>
</RelativeLayout>